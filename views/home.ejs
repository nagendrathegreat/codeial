
    <h1>Codeial/<%=title%></h1>
    
    <section id="feed-post">
        <h4>Posts</h4>
        <form action="posts/create" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="3" palaceholder="Type here"></textarea>
            <input type="submit" value="Post">
        </form>
        <div id="post-list-container">
            <ul>
                <%for(post of posts){%>
                  <p>
                    <li>
                        <%= post.content %>
                        <br>
                        <small>  <%= user.name %></small>
                           
                    
                    </li>
                  </p>  
                    
                <%} %>
            </ul>
        </div>
    </section>